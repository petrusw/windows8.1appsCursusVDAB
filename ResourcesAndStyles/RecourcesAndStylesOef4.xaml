<Page
    x:Class="ResourcesAndStyles.RecourcesAndStylesOef4"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ResourcesAndStyles"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <Style x:Key="customRectangleStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="Green"></Setter>
        </Style>
        <Style x:Key="OtherRectangleStyle" TargetType="Rectangle">
            <Setter Property="Fill" Value="Blue"></Setter>
        </Style>
    </Page.Resources>

    <Canvas Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Rectangle Height="150" Width="150" Canvas.Top="100" Canvas.Left="0" Style="{StaticResource customRectangleStyle}"></Rectangle>
        <Rectangle Height="150" Width="150" Canvas.Top="100" Canvas.Left="250" Style="{StaticResource OtherRectangleStyle}"></Rectangle>
        <Rectangle Height="150" Width="150" Canvas.Top="100" Canvas.Left="500" Style="{StaticResource customRectangleStyle}"></Rectangle>
    </Canvas>
</Page>
